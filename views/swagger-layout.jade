doctype html
html
  head
    title #{glob.title} - #{title}
    link(rel='stylesheet', href='#{glob.network.schema}://#{glob.network.portalHost}/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='#{glob.network.schema}://#{glob.network.portalHost}/content/wicked.css')
    link(rel="stylesheet", href="#{glob.network.schema}://#{glob.network.portalHost}/assets/highlight/css/default.css")
    link(rel='stylesheet', href='#{glob.network.schema}://#{glob.network.portalHost}/content/swagger-override.css' media='screen' type='text/css')
    link(rel='stylesheet', href='#{glob.network.schema}://#{glob.network.portalHost}/assets/css/override.css')
    link(href='swagger-ui.css' media='screen' rel='stylesheet' type='text/css')
    script(src='#{glob.network.schema}://#{glob.network.portalHost}/assets/highlight/highlight.js')

  body
    nav(class="navbar navbar-default navbar-fixed-top")
        .container
            .navbar-header
                button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.pull-left(href='#{glob.network.schema}://#{glob.network.portalHost}#{glob.layouts.defautRootUrl}' target=glob.layouts.defautRootUrlTarget)
                    if glob.layouts.defautRootUrlText != null
                        span= glob.layouts.defautRootUrlText
                    else
                        img(src='#{glob.network.schema}://#{glob.network.portalHost}/content/images/wicked-40.png' style='margin-top: 5px; margin-right: 5px;' title='wicked project home')

            div(id="navbar", class="collapse navbar-collapse")
                ul(class="nav navbar-nav")
                    li
                        a(href="#{glob.network.schema}://#{glob.network.portalHost}/")= glob.layouts.swaggerUi.menu.homeLinkText
                    li
                        a(href="#{glob.network.schema}://#{glob.network.portalHost}/apis") APIs
                    li
                        a(href='#{glob.network.schema}://#{glob.network.portalHost}/applications') Applications
                    li
                        if glob.layouts.swaggerUi.menu.showContactLink
                            a(href="#{glob.network.schema}://#{glob.network.portalHost}/content/contact") Contact
                    li
                        if glob.layouts.swaggerUi.menu.showContentLink
                            a(href="#{glob.network.schema}://#{glob.network.portalHost}/content/toc") Content

    block content

    hr
    .container
        footer
            table(width='100%')
                tr
                    td(style='text-align:left; color: #999999;')!= glob.footer
                    td(style='text-align:right; color:#999999;')
                        if glob.layouts.footer.showBuiltBy
                            | Built by <a href='http://www.haufe-lexware.com' target='_blank'>Haufe-Lexware</a>, powered by <a href='https://www.konghq.com' target='_blank'>Kong</a>.
                tr
                    if glob.layouts.footer.showBuilds
                        td(colspan=2 style='text-align:right; color: #cccccc; font-size: 10pt;') Portal Build: #{glob.buildDate} -- Config Build: #{glob.configDate}
                if !glob.isProduction
                    tr
                        td(colspan=2 style='text-align:center; color: #ff0000; font-size:18pt;') PORTAL IS RUNNING IN DEVELOPMENT MODE

    script(src='#{glob.network.schema}://#{glob.network.portalHost}/assets/jquery/jquery.min.js')
    script(src='swagger-ui-bundle.js' type='text/javascript')
    script(src='swagger-ui-standalone-preset.js' type='text/javascript')

    block bodyScripts